<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="little_robot">
  <xacro:arg name="gpu" default="false"/>
  <xacro:property name="gpu" value="$(arg gpu)" />
  <xacro:arg name="organize_cloud" default="false"/>
  <xacro:property name="organize_cloud" value="$(arg organize_cloud)" />

  <xacro:macro name="gazebo_material" params="ref color">
    <gazebo reference="${ref}">
      <material>Gazebo/${color}</material>
    </gazebo>
  </xacro:macro>

  <!-- Base Footprint -->
  <link name="base_footprint" >
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
    <collision>
      <geometry>
        <box size="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <!-- Base Link -->
  <joint name="footprint" type="fixed" >
   <parent link="base_footprint" />
    <child link="base_link" />
    <origin xyz="0 0 0.3" rpy="0 0 0" />
  </joint>
  <link name="base_link" >
    <visual>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.4 0.3" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.4 0.3" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="10"/>
      <inertia ixx="3.0" ixy="0.0" ixz="0.0"
               iyy="3.0" iyz="0.0" 
               izz="3.0" />
    </inertial>
  </link>

  <!-- lidar_holder Link -->
  <joint name="lidar_holder_joint" type="fixed">
    <origin xyz="0.0 0 0.15" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_holder"/>
  </joint>
  <link name="lidar_holder">
    <visual>
      <origin xyz="0.0 0 0.175" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.35"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <!-- left_wheel Link -->
  <joint name="left_wheel_joint" type="fixed">
    <origin xyz="0.0 0.25 -0.15" rpy="1.57 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
  </joint>
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- rigth_wheel Link -->
  <joint name="rigth_wheel_joint" type="fixed">
    <origin xyz="0.0 -0.25 -0.15" rpy="-1.57 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
  </joint>
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- front_wheel Link -->
  <joint name="front_wheel_joint" type="continuous">
    <origin xyz="0.225 0.0 -0.225" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="front_wheel"/>
    <axis xyz="1 1 1" />
  </joint>
  <link name="front_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.075"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 0.95"/>
      </material>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision>
      <geometry>
        <sphere radius="0.075"/>
      </geometry>
    </collision>
  </link>

  <!-- back_wheel Link -->
  <joint name="back_wheel_joint" type="continuous">
    <origin xyz="-0.225 0.0 -0.225" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="back_wheel"/>
    <axis xyz="1 1 1" />
  </joint>
  <link name="back_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.075"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 0.75"/>
      </material>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision>
      <geometry>
        <sphere radius="0.075"/>
      </geometry>
    </collision>
  </link>

  <xacro:gazebo_material ref="base_link"         color="Red" />
  <xacro:gazebo_material ref="lidar_holder"      color="Black" />
  <xacro:gazebo_material ref="left_wheel"  color="Black" />
  <xacro:gazebo_material ref="right_wheel"   color="Black" />
  <xacro:gazebo_material ref="front_wheel" color="Black" />
  <xacro:gazebo_material ref="back_wheel"  color="Black" />

  <!-- camera Link -->
  <joint name="camera_holder_joint" type="fixed">
    <origin xyz="0.15 0 0.0" rpy="0 0 0"/>
    <parent link="lidar_holder"/>
    <child link="camera"/>
  </joint>
  <link name="camera">
    <collision>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- <box size="0.001 0.001 0.001"/> -->
        <box size="0.05 0.1 0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.1 0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 0.85"/>
      </material>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <gazebo reference="camera">
    <sensor type="camera" name="camera">
      <update_rate>15.0</update_rate>
      <camera name="head">
        <horizontal_fov>2.0</horizontal_fov>
        <image>
          <width>320</width>
          <height>180</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>200.0</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>camera</cameraName>
        <imageTopicName>image</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera</frameName>
        <hackBaseline>0.0</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>
  <xacro:gazebo_material ref="camera"  color="Black" />



  <xacro:include filename="$(find vehicle_simulator)/urdf/VLP-16.urdf.xacro"/>
  <xacro:VLP-16 parent="lidar_holder" name="velodyne" topic="/velodyne_points" organize_cloud="${organize_cloud}" hz="10" samples="440" gpu="${gpu}">
    <origin xyz="0 0 0.35" rpy="0 0 0" />
  </xacro:VLP-16>


</robot>
